% notation of 'a' (outer vertices)
\begin{frame}{Notation of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
The vertices are labeled:
\begin{itemize}
    \item $1,..., n$ which are vertices $A_1,A_2,...,A_n$\vspace{5pt}
 
\end{itemize}
\column{0.5\textwidth}
    \begin{center}
        \includegraphics[width=5cm]{images/vertices.jpg}\\
        $R_{10}(a,r)$
    \end{center}
\end{columns}
\end{frame}

% notation of inner vertices
\begin{frame}{Notation of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
The vertices are labeled:
\begin{itemize}
    \item $1,..., n$ which are vertices $A_1,A_2,...,A_n$\vspace{5pt}
    \item $n+1,n+1,..., 2n$ which are vertices $B_1,B_2,...,B_n$\\
\end{itemize}
\column{0.5\textwidth}
    \begin{center}
        \includegraphics[width=5cm]{images/vertices.jpg}\\
        $R_{10}(a,r)$
    \end{center}
\end{columns}
\end{frame}


\begin{frame}{Parts of Rose Windows} % changing title header
% definition of 'rim', outer edges
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item Rim: $A_i$ - $A_{i+1}$
\end{itemize}
\column{0.5\textwidth}
\begin{center}
    \includegraphics[width=5cm]{images/rim.png}
$R_{10}(a,r)$
\end{center} 
\end{columns} 
\end{frame}

% definition of 'in-spokes', edges on the inside
\begin{frame}{Parts of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item In-Spoke: $A_i$ - $B_i$
\end{itemize}
\column{0.5\textwidth}
\begin{center}
    \includegraphics[width=5cm]{images/in-spokes.png}
$R_{10}(a,r)$
\end{center} \end{columns} \end{frame}

% definition 'out-spoke', other set of lines inside the vertices
\begin{frame}{Parts of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item Out-Spoke: $B_i$ - $A_{i+a}$
\end{itemize}
\column{0.5\textwidth}
\begin{center}
    \includegraphics[width=5cm]{images/out-spokes.png}
$R_{10}(a,r)$
\end{center} \end{columns} \end{frame}

% dissecting the spokes
\begin{frame}{Parts of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item Out-Spoke: $B_i$ - $A_{i+a}$
\item $a =$ spread of $A_n$ vertices (outside vertices) via the in-spoke, out-spoke
\end{itemize}
\column{0.5\textwidth}
\begin{center}
    \includegraphics[width=5cm]{images/a.png}
$R_{10}(a,r)$
\end{center} \end{columns} \end{frame}

% dissecting the spokes part 2
\begin{frame}{Parts of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item Out-Spoke: $B_i$ - $A_{i+a}$
\item $a =$ spread of $A_n$ vertices (outside vertices) via the in-spoke, out-spoke
\item $a = 2$
\end{itemize}
\column{0.5\textwidth}
\begin{center}
    \includegraphics[width=5cm]{images/a.png}
$R_{10}(2,r)$
\end{center} \end{columns} \end{frame}

