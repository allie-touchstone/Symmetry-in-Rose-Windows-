% showing rim and hub edges of small example
\begin{frame}{n = 3}
\begin{columns}
\column{0.5\textwidth}
Rim: $A_i$ - $A_{i+1}$\hspace{10pt}\small(pink)
\vspace{5pt}
\begin{itemize}
\item \hspace{5pt}$A_1 - A_2$\\
\item \hspace{5pt}$A_2 - A_3$\\
\item \hspace{5pt}$A_3 - A_1$\\ \vspace{15pt}
\end{itemize}
Hub: $B_i$ - $B_{i+r}$\hspace{15pt}\small(green)
\vspace{5pt}
\begin{itemize}
\item \hspace{5pt}$B_1 - B_2$\\
\item \hspace{5pt}$B_2 - B_3$\\
\item \hspace{5pt}$B_3 - B_1$
\end{itemize}
\column{0.5\textwidth}
