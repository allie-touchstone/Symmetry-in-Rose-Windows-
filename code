\item \hspace{5pt}$A_2: 2$\\
\item \hspace{5pt}$A_3: 3$\\ \vspace{5pt}
\item \hspace{5pt}$B_1: 4$\\
\item \hspace{5pt}$B_2: 5$\\
\item \hspace{5pt}$B_3: 6$
\end{itemize}
