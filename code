% combining all edges of a rose window
\begin{frame}{Parts of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item Rim: $A_i$ - $A_{i+1}$ (pink)
\item In-Spoke: $A_i$ - $B_i$ (purple)
\item Out-Spoke: $B_i$ - $A_{i+a}$ (blue)
\item Hub: $B_i$ - $B_{i+r}$ (green)
\end{itemize}
\column{0.5\textwidth}
\begin{center}
\includegraphics[width=5cm]{images/colored.png}
$R_{10}(2,3)$ 
\end{center} 
\end{columns} 
\end{frame}

