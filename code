\begin{frame}{Showing they Hold}
\begin{columns}
\column{.5\textwidth}

\begin{itemize}
\item Rim: $A_i$ - $A_{i+1}$ (pink)
\item In-Spoke: $A_i$ - $B_i$ (purple)
\item Out-Spoke: $B_i$ - $A_{i+a}$ (blue)
\item Hub: $B_i$ - $B_{i+r}$ (green)
\item $\rho: A_i - A_{i+1}, \hspace{10pt} B_i - B_{i+1}$\\
\item $\mu: A_i - A_{-i},\hspace{10pt} B_i - B_{-a-i} $ \\

\end{itemize}
    \column{.5\textwidth}
    \begin{center}
\includegraphics[width=5cm]{images/Chapel/Chapel Colored.png}
$R_{12}(1,5)$ 
\end{center}
    \end{columns}
\end{frame}


