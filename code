\end{frame}


\begin{frame}{$\mu$}
\begin{center}
    $\mu$ is a reflection of a rose graph about a certain vertex\\
$\mu: A_i - A_{-i},\hspace{15pt} B_i - B_{-a-i} $ \\
\end{center}
\begin{columns}
\column{0.3\textwidth}
