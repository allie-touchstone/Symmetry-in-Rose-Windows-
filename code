\begin{center}
\includegraphics[width=5cm]{images/hub.png}
$R_{10}(2,r)$
\end{center} 
\end{columns} 
\end{frame}

% dissection of hub
\begin{frame}{Parts of Rose Windows}
\begin{columns}
\column{0.5\textwidth}
Rose window: $R_n(a,r)$
\begin{itemize}
\item Hub: $B_i$ - $B_{i+r}$
\item $r =$ spread of the $B_n$ vertices (inside vertices) via the hub
\end{itemize}
\column{0.5\textwidth}
\begin{center}
\includegraphics[width=5cm]{images/r.png}
$R_{10}(2,r)$ 
\end{center} 
\end{columns} 
\end{frame}

% dissection of hub part 2
\begin{frame}{Parts of Rose Windows}
